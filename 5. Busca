// Busca Sequencial ou Linear

  int busca (int v[], int tam, int n){
      
      for(int i = 0; i <= tam; i++){
          
          if (n == v[i]){
              printf("\nA posição de %d é %d",n,(i+1));
              return 0;
          }
      }
      
      printf("\nNúmero não encontrado");
      return 0;
  }
      
  int main(){
      
      int vet [] = {23,4,67,-8,54,90,21};
      int num;
      
      printf("\nQual número você quer buscar? ");
      scanf("%d",&num);
      
      busca(vet,7,num);
  
      return 0;
  }

// Busca Sequencial Ordenado

    int busca (int v[], int tam, int n){
        
        for(int i = 0; i <= tam; i++){
            
            if (n == v[i]){
                printf("\nA posição de %d é %d",n,(i+1));
                return 0;
            }
            else if (n < v[i]){
                printf("\nNúmero não encontrado");
                return 0;
            }
        }
        
        printf("\nNúmero não encontrado");
        return 0;
    }
        
    int main(){
        
        int vet [] = {-8,4,21,23,54,67,90};
        int num;
        
        printf("\nQual número você quer buscar? ");
        scanf("%d",&num);
        
        busca(vet,7,num);
    
        return 0;
  }

// Busca Binária

  int busca (int v[], int tam, int n) {
    
    for (int i = 0; i <= tam; i++) {
        
        if (n == v[i]) {
            printf("\nA posição de %d é %d", n, (i+1));
            return 0;
        }
        else if (n < v[i]) {
            
                if (n == v[i]) {
                    printf("\nA posição de %d é %d", n, (i+1));
                    return 0;
                }
                else {
                    busca(v, tam/2, n);
                }
        }
        else if (n > v[i]) {
                
                if (n == v[i]) {
                    printf("\nA posição de %d é %d", n, (i+1));
                    return 0;
                }
                else {
                    busca(v, tam/2, n);
                }
        }
    }

      printf("\nNúmero não encontrado");
      return 0;
  }

  int main(){
      
      int vet [] = {-8,4,21,23,54,67,90};
      int num;
      
      printf("\nQual número você quer buscar? ");
      scanf("%d",&num);
      
      busca(vet,7,num);
  
      return 0;
  }
